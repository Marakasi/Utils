                <exclude>kz.bsbnb.ecm.extension:json</exclude>
                <exclude>backport-util-concurrent:backport-util-concurrent-java12</exclude>
                <exclude>org.codehaus.groovy:groovy-all</exclude>
            </excludes>
        </dependencySet>
         <include>kz.bsbnb.ecm.extension:Components:jar:*</include>
    </dependencySets>-->

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>kz.bsbnb.ecm.extension:dfs-plugin:jar:*</include>
                <include>kz.bsbnb.ecm.extension:json:jar:*</include>
            </includes>
            <binaries>
                <outputDirectory>/</outputDirectory>
                <dependencySets>
                    <dependencySet>
                        <excludes>
                            <exclude>*:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>

</assembly>